30)def verificar_valor(x):
    if 2<=x<=5:
        print(f"O numero {x} está no intervalo:")
    else:
        print(f"O número {x} não está no intervalo:")
verificar_valor(2)
verificar_valor(5)
verificar_valor(10)


31)while True:
    print("""
    ===CALCULADORA SIMPLES===
    1)Soma
    2)Subtração
    3)Multiplicação
    4)Divisão
    5)Potencias
    6)Modulo(resto)
    0)Sair""")
    
    opc=input("escolha uma opção:").strip()
    if opc==0:
        print("Saindo...Até a próxima")
        break
    
    if opc not in("1","2","3","4","5","6","0"):
        print("Comando invalido")
        continue
    
    while True:
        try:
            a=float(input("Digite o primeiro número:"))
            b=float (input("Digite o segundo número:"))
            break
        except ValueError:
            print("Entrada inválida. Digite números válidos.")

    if opc == "1":
        print("Resultado:", a + b)
    elif opc == "2":
        print("Resultado:", a - b)
    elif opc == "3":
        print("Resultado:", a * b)
    elif opc == "4":
        if b == 0:
            print("Erro: divisão por zero não é permitida.")
        else:
            print("Resultado:", a / b)
    elif opc == "5":
        print("Resultado:", a ** b)
    elif opc == "6":
        if b == 0:
            print("Erro: módulo por zero não é permitido.")
        else:
            print("Resultado:", a % b)
        

32)import re

def validar_senha(senha):
    
    if len (senha) <8:
        return("Senha invalida:pelo menos 8 caracteres")
        
    if not re.search(r"[A-Z]",senha):
        return("Senha invalida:deve conter pelo menos uma letra maiuscula")
        
    if not re.search(r"[a-z]",senha):
        return("Senha invalida:deve conter pelo menos uma letra minuscula")
        
    if not re.search(r"[0-9]",senha):
        return("Senha invalida:deve conter pelo menos um numero")
        
    if not re.search(r"[!@#$%^&*]",senha):
        return("Senha invalida:deve conter ao menos um caractere especial")
    
    return ("Senha valida!")
        
senha=input("digite um Senha:")
print(validar_senha(senha))
        

33)print("=== CALCULADORA DE DESCONTO ===")

valor = float(input("Digite o valor da compra: R$ "))

if valor <= 100:
    desconto = 0
elif valor <= 500:
    desconto = 0.10
else:
    desconto = 0.20

valor_desconto = valor * desconto
valor_final = valor - valor_desconto

print(f"Valor da compra: R$ {valor:.2f}")
print(f"Desconto aplicado: {desconto*100:.0f}% (R$ {valor_desconto:.2f})")
print(f"Valor final a pagar: R$ {valor_final:.2f}")

    
    
    
        

