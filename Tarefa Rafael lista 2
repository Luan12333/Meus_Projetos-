1)ddds_validos=("55")
while True:
    telefone=input("Digite um numero de telefone Brasileiro:")
    
    try:
        if not telefone.isdigit():
            raise ValueError("O telefone deve conter apenas numeros")
        
        if len(telefone) not in (10,11):
            raise ValueError("O Telefone deve ter 10 ou 11 digitos")
            
        ddd = telefone[:2]    
        if ddd not in ddds_validos:
            raise ValueError("DDD invalido para o Brasil")
            
        if len (telefone) ==11 and telefone[2] !="9":
            raise valueError("Celulares no Brasil devem começar com  9")
            print("Telefone valido para o brasil")
            break
        
    except ValueError as erro:
            print("Erro:",erro)
        
    finally:
            print("Validação concluida\n")


2)notas=[]
quant_notas=3

for i in range(quant_notas):
    while True:
        try:
            nota=float(input(f"Digite uma nota {i+1}:"))
            if 0 <= nota <= 10:
                notas.append(nota)
                break
            else:
                print("Nota invalida: digite entre 0 e 10")
        except ValueError:
                print("Entrada inválida: Digite apenas números")
    #calcular média
    média=sum(notas)/len(notas)
    
    #verificar situação
    if média<=7:
        print(f"Media {round(média,2)} aprovado")
    elif 5<=média<7:
        print(f"Media {round(média,2)} recuperação")
    else:
        print(f"Media {round(média,2)} reprovado")
        
            
    


            
            
